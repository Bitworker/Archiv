= form_for @archiv do |f|
  - if @archiv.errors.any?
    #error_explanation
      %h2
        Es wurden #{@archiv.errors.count} fehler gefunden:
      %ul
        - @archiv.errors.each do |attr, msg|
          %li= msg
  .field
    = f.label "Name"
    %br/
    = f.text_field :name
  .field
    = f.label "Kategorie"
    %br/
    = f.select :category, options_for_select(@categories.map(&:name), :name), :prompt => "Bitte w√§hlen"
  .field
    = f.label "Bedindungen"
    %br/
    = f.text_field :terms
  .field
    = f.label "Beispiel Link"
    %br/
    = f.text_field :example_link
  .field
    = f.label "Punkte"
    %br/
    = f.number_field :points
  .actions
    = f.submit "Speichern"
