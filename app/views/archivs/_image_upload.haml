= form_for userarchivment, :url => update_userarchivment_archiv_path, :remote => true, :html => {:multipart => true, :id => "update_image_form"} do |f|
  %p
    = f.label :image, "Lokales Bild: "
    = f.file_field :image
    %br/
    = f.label :remote_image_url, "Bild via URL:"
    = f.text_field :remote_image_url
    %br/
    %br/
    = f.submit "Upload starten"
