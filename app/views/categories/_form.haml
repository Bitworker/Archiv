= form_for @category do |f|
  - if @category.errors.any?
    #error_explanation
      %h2
        Es wurden #{@category.errors.count} fehler gefunden:
      %ul
        - @category.errors.each do |attr, msg|
          %li= msg
  .field
    = f.label "Name"
    %br/
    = f.text_field :name
  .actions
    = f.submit "Speichern"
